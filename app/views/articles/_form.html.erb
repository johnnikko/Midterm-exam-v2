<%= form_for article, url: url, method: methods do |f|%>
  <div class="form-group">
    <%= f.label :title, class: "control-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :category, class: "control-label" %>
    <%= f.select :category_id,Category.all.pluck(:name,:id),{prompt:'select category'},{class: "form-control"}%>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control", rows: "10" %>
  </div>
  <div class="pull-right">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Back", articles_path, class: "btn btn-default" %>
  </div>
<% end %>
