<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h1 class="panel-title">Article Information</h1>
      </div>
      <div class="panel-body">
        <div class="form-horizontal">
          <div class="form-group">
            <label class="text-right col-sm-2">Title</label>
            <div class="col-sm-10">
              <p><%= @article.title %></p>
            </div>
          </div>
          <div class="form-group">
            <label class="text-right col-sm-2">Content</label>
            <div class="col-sm-10">
              <p><%= @article.content %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>