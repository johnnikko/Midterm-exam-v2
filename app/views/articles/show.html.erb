<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h1 class="panel-title">Article Information</h1>
      </div>
      <div class="panel-body">
        <div class="form-horizontal">
          <div class="form-group">
            <label class="text-right col-sm-2">Title</label>
            <div class="col-sm-10">
              <p><%= @article.title %></p>
            </div>
          </div>
          <div class="form-group">
            <label class="text-right col-sm-2">Content</label>
            <div class="col-sm-10">
              <p><%= @article.content %></p>
            </div>
          </div>
        </div>
        <label>Comments</label>
        <hr>
        <div class="form-horizontal">
          <% @comments.each do |comment| %>
            <div class="form-group">
              <label class="text-right col-sm-3">Comment by:</label>
              <div class="col-sm-9">
                <p><%= comment.user.email %></p>
              </div>
              <label class="text-right col-sm-3">Comment:</label>
              <div class="col-sm-9">
                <p><%= comment.content %></p>
              </div>
              <label class="text-right col-sm-3">Dated added:</label>
              <div class="col-sm-9">
                <p><%= time_ago_in_words(comment.created_at) %></p>
              </div>
            </div>
            <hr>
          <% end %>
        </div>
        <div class="pull-right">

        </div>
      </div>
    </div>
  </div>
</div>