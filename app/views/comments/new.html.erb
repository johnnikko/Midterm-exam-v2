<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h1 class="panel-title">Add New Article</h1>
      </div>
      <div class="panel-body">
        <%= form_for @comment, url: article_comments_path(@article), method: :post do |f|%>
          <div class="form-group">
            <%= f.label :content %>
            <%= f.text_area :content, class: "form-control", rows: "10" %>
          </div>
          <div class="pull-right">
            <%= f.submit class: "btn btn-primary" %>
            <%= link_to "Back", articles_path, class: "btn btn-default" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>